{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext", 
    "moduleResolution": "node",
    "types": ["vite/client"],
  },
  "exclude": ["dist", "node_modules"]
}
