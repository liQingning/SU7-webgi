{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "target": "es6",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "exclude": ["dist", "node_modules"]
}
